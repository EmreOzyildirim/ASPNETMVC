@using EmreOzyildirimBlog.Models.Entities
@model IEnumerable<Iletisim>
@{
    ViewBag.Title = "İletişim";
}


@Html.Action("_Harita", "PartialViewlar")

<div class="bg-white">
    <div class="container">
        <div class="row mt-5 mb-5">
            @if (Model.Count() == 0)
            {
                @Html.Action("_IletisimFormu", "PartialViewlar");
            }
            else
            {
                @Html.Action("_IletisimFormu", "PartialViewlar");

                <div class="offset-md-1"></div>
                foreach (var item in Model)
                {
                    if (item.AktifMi)
                    {
                        <div class="col-sm-12 col-md-4">
                            <div class="bilgi-alani">
                                <div class="row">
                                    <div class="col-md-12 mb-4">
                                        <div class="row d-table">
                                            <div class="d-table-cell align-middle">
                                                <i class="fas fa-map-pin" style="font-size: 40px;"></i>
                                            </div>
                                            <div class="col-sm-10 col-md-10 d-table-cell align-middle">
                                                @item.AcikAdres
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 mb-4">
                                        <div class="row d-table">
                                            <div class="d-table-cell align-middle">
                                                <i class="far fa-paper-plane" style="font-size: 26px; margin-left: 0px;"></i>
                                            </div>
                                            <div class="col-md-10 d-table-cell align-middle">
                                                <a href="mailto:@item.Email">@item.Email</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 mb-4">
                                        <div class="row d-table">
                                            <div class="d-table-cell align-middle">
                                                <i class="fas fa-mobile-alt" style="font-size: 40px;"></i>
                                            </div>
                                            <div class="d-table-cell align-middle col-sm-10 col-md-12">
                                                <a href="tel:@item.Telefon">@item.Telefon</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>